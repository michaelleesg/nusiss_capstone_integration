# Full CTI Processor image (with ML/NLP dependencies)
FROM python:3.12-slim

# Install system dependencies for ML, PDF processing, spaCy
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    git \
    libmagic1 \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy project files
COPY pyproject.toml /app/
COPY app/ /app/app/

# Install ALL Python dependencies (including ML/NLP)
RUN pip install --no-cache-dir -e .

# Download spaCy English model (heavy ~40MB)
RUN python -m spacy download en_core_web_sm

# Create output directory
RUN mkdir -p /app/out /app/data

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV OUTPUT_DIR=/app/out

# Default command
CMD ["python", "-m", "app.cli", "--help"]
